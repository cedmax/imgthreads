{
  "name": "root",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "deploy:be": "lerna run --stream --scope backend deploy",
    "start:fe": "lerna run --scope site start",
    "build:fe": "lerna run --scope site build",
    "lint": "lerna run lint --"
  },
  "devDependencies": {
    "husky": "4.2.5",
    "lerna": "3.21.0",
    "lint-staged": "10.2.4",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ]
  }
}
